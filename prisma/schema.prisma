generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Work {
  id          Int     @id @default(autoincrement())
  type        String
  title       String?  @unique
  description String?
  images      Image[]
}

model Image {
  id       Int    @id @default(autoincrement())
  position Int
  url      String
  workID   Int
  work     Work   @relation(fields: [workID], references: [id])
}

model Update {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Info {
  id          Int    @id @default(0)
  aboutMe     String
  headShotUrl String
}
